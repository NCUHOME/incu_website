.header-bar
  display flex
  justify-content flex-start
  position absolute
  top 0
  width 100%
  height 43px
  background linear-gradient(rgba(0,0,0,.25), rgba(0,0,0,0))
  padding 0 16px 0 16px
  z-index 4

  @media (min-width 768px)
    &
      height 86px
      padding 0 36px 0 36px

.banner-contianer
  @media (min-width 768px)
    &
      position absolute
      top 0
      left 0

  .banner
    background-image url('../assets/image/m-header.png')
    background-repeat no-repeat
    background-size contain
    height calc(100vw / 1890 * 1722)
    width 100vw

    @media (min-width 768px)
      &
         background-image url('../assets/image/header.png')

.logo
  padding 16px 0 16px 0
  width 76px
  height 34px

  @media (min-width 768px)
    &
      width 114px
      height 51px

.title-container
  display flex
  flex-direction column

  @media (max-width 767px)
    &
      width 100%
      margin-top 20px
      justify-content center
      align-items center

  @media (min-width 768px)
    &
      margin 10px
      position absolute
      top 22vh
      left 57vw
      justify-content flex-start

  .title
    width 60vw

    @media (min-width 768px)
      &
        width 32vw

.btn-container
  display flex
  margin-top 36px

  @media (max-width 767px)
    &
      flex-direction column
