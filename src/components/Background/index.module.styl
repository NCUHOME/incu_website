.stars
	margin 0 auto
	position absolute
	top 0
	left 0
	right 0
	bottom 0
	overflow hidden
	background linear-gradient(#000008, #11152B)
	z-index -1;
	animation-delay 0.8s

.star
	display block
	opacity 0
	position relative
	left 90%
	width 1px
	background transparent
	animation fall-down 2s ease-in-out infinite

	&:after
		content ' '
		display block
		border 1.4px solid #fff
		border-width 0px 100px 2px 150px
		left 5px
		transform rotate(-45deg)
		border-color transparent transparent transparent #eee
		filter drop-shadow(0 0 9px rgba(255, 255, 255, 1))

@keyframes fall-down {
	0% {
		opacity 0
		transform translate3d(0, 0, 0)
	}
	50% {
		opacity .55
	  transform translate3d(-200px, 200px, 0)
	}
	100% {
		opacity 0
	  transform translate3d(-300px, 300px, 0)
	}
}
	