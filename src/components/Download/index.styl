.download-container
  transition filter 0.3s ease-in-out
  @media (max-width 767px)
    &
      margin-bottom 16px

  @media (min-width 768px)
    &
      margin-right 24px

  img
    @media (max-width 767px)
      &
        width 40vw

    @media (min-width 768px)
      &
        width 14vw

  &:hover {
    filter drop-shadow(0 0 13px rgba(255, 255, 255, 0.7))
  }