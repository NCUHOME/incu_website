.container {
  width 100%
  min-height: 100vh
  overflow hidden
}

.header-bar
  display flex
  box-sizing border-box
  justify-content flex-start
  position absolute
  top 0
  width 100%
  height 55px
  background linear-gradient(rgba(0,0,0,.45), rgba(0,0,0,.13),rgba(0,0,0,0))
  padding 0 16px 0 16px
  z-index 4

  @media (min-width 768px)
    &
      height 86px
      padding 0 36px 0 36px

.banner-container
  animation-delay 0.3s

  @media (min-width 768px)
    &
      position absolute
      top 0
      left 0

  .banner
    background-image url('../../assets/image/m-header.webp')
    background-repeat no-repeat
    background-size contain
    height calc((100vw / 1890) * 1772)
    width 100vw
    filter drop-shadow(-14px 14px 0 rgba(0,0,16,0.6))

    @media (min-width 768px)
      &
        height calc((100vw / 1914) * 984)
        background-image url('../../assets/image/header.webp')

.logo
  padding 16px 0 16px 0
  width 76px
  height 34px

  @media (min-width 768px)
    &
      width 114px
      height 51px

.title-container
  display flex
  flex-direction column
  animation-delay 0.6s
  filter drop-shadow(0 0 11px rgba(0,0,16,1))

  @media (max-width 767px)
    &
      width 100%
      margin-top 12px
      justify-content center
      align-items center

  @media (min-width 768px)
    &
      margin 10px
      position absolute
      top 22vh
      left 57vw
      justify-content flex-start

  .title
    width 60vw

    @media (min-width 768px)
      &
        width 32vw

.btn-container
  display flex
  margin-top 36px
  margin-bottom 30px

  @media (max-width 767px)
    &
      flex-direction column
      margin-top 26px
